[settings]
# Root folder to scan for .fits
input_dir  = /path/to/your/fits
# Mirror-tree output root
output_dir = /path/to/your/fits_xisf 

# Compression: zlib, lz4, lz4hc, or zstd
codec  = zstd
shuffle = yes
level   = 9

# App identifier in XISF metadata
creator_app = fits_to_xisf_batch.py

# Number of parallel workers for conversion
workers = 2

# Skip conversion if XISF file already exists (yes/no)
skip_existing = yes

# Delete original FITS file after successful compression
# -1 = never delete, 0 = delete immediately, >0 = delete if older than X days
delete_older_than_days = -1

